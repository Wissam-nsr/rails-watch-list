<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @list.photo.key%>')">
  <div class="container">
    <h1><%=@list.name%></h1>
    <p>Change your life with this app!</p>
  <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-primary"%>
  <%= link_to "Back to lists", lists_path, class: "btn btn-primary"%>
  </div>
</div>

<%# list of movies here %>
<div class="container">
<ul>
  <% @list.bookmarks.each do |bookmark|%>
    <li class="list-group-item m-2">
      <%= image_tag bookmark.movie.poster_url, alt: "pic", class: "movie" %>
      <strong><%= bookmark.movie.title %></strong> -
      <%= bookmark.comment %>
      <%= link_to "Delete", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    </li>
  <% end %>
</ul>
 </div>
