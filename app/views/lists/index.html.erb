<div class= ".container m-2">
  <h1>Your lists</h1>

  <p>
    <%= link_to "Add a list", new_list_path, class: "btn btn-primary"%>
  </p>

  <div class="cards">
    <% @lists.each do |list|%>
    <div>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 1, width: 100 %>')">
        <%= list.name %>
      </div>
          <%= link_to "See movies", list_path(list), class: "btn btn-success"%>
          <%= link_to "Delete", list_path(list), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
      </div>
    <% end %>
  </div>

</div>
